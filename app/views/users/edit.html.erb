<% provide(:title, "Settings") %>
<% provide(:button_text, 'Save changes') %>
<% provide(:url, user_path) %>

<div class="mx-auto col-12 col-md-10 col-lg-8">

  <h1 class="my-4 text-center">Update your profile</h1>

  <%= render 'users/form' %>
  <div class="my-3">
    <img src="<%= @user.avatar_src %>" />
    <%= form_for(@user) do |f| %>
      <%= f.hidden_field :avatar_src, value: generate_avatar %>
      <%= f.submit 'Generate a new avatar' %>
    <% end %>
  </div>
</div>